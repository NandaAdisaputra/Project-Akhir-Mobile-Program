<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/icon_item_name_update"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/shopping_bag" />

    <EditText
        android:id="@+id/edt_name_product_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Nama Barang"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/icon_price_tag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/price_tag" />

    <EditText
        android:id="@+id/edt_price_product_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Harga Barang"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/icon_minus_update"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_minus" />

    <ImageView
        android:id="@+id/icon_plus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_plus" />

    <EditText
        android:id="@+id/edt_stock_product_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:hint="Stok Barang"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edt_description_product_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="left|top"
        android:hint="Masukkan Deskripsi Barang"
        android:minHeight="60dp"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_photo_update"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@drawable/noimage" />

        <Button
            android:id="@+id/btn_cek_url_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:background="#F14C84"
            android:layout_toRightOf="@id/iv_photo_update"
            android:gravity="center"
            android:text="Cek Url Foto" />


    </LinearLayout>


    <EditText
        android:id="@+id/edt_url_image_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Masukkan Url Gambar"
        android:textSize="12sp" />


    <Button
        android:id="@+id/btn_update_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14sdp"
        android:background="@drawable/login_button"
        android:layout_alignParentBottom="true"
        android:text="Buat Barang" />

</LinearLayout>