<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reset_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:id="@+id/titlereset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#FF0057"
        android:gravity="center"
        android:text="@string/forgot_your_password"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fontreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_below="@id/titlereset"
        android:text="@string/to_reset_password_enter_your_email_press_the_button_and_check_mail_to_follow_instruction"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt_reset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/fontreset"
        android:hint="@string/your_email_here"
        android:inputType="textEmailAddress"
        tools:ignore="Autofill" />


    <Button
        android:id="@+id/btn_reset_password"
        style="@style/loginButton"
        android:layout_centerInParent="true"
        android:layout_below="@id/edt_reset_email"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/reset_password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_reset_password"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_backreset"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/back"
            android:onClick="onClick"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="#FC3C7D"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_exitapps"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/exit"
            android:onClick="onClick"
            android:textAlignment="center"
            android:textColor="#FC3C7D"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>